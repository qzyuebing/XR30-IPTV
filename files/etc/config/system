
config system
	option ttylogin '0'
	option log_size '512'
	option urandom_seed '0'
	option timezone 'CST-8'
	option zonename 'Asia/Shanghai'
	option log_proto 'udp'
	option zram_comp_algo 'lzo'
	option cronloglevel '9'
	option conloglevel '1'
	option hostname 'XR30_IPTV'

config timeserver 'ntp'
	list server 'ntp.tencent.com'
	list server 'ntp1.aliyun.com'
	list server 'ntp.ntsc.ac.cn'
	list server 'cn.ntp.org.cn'

config imm_init
	option ipv6 '1'
	option lang '1'
	option system_chn '1'

config led
	option name 'CHINA_TELECOM'
	option trigger 'netdev'
	option dev 'lan2'
	list mode 'link'
	list mode 'tx'
	list mode 'rx'
	option sysfs 'xr30:white'

config led
	option name 'SDYX'
	option trigger 'netdev'
	option dev 'lan3'
	option sysfs 'xr30:red'
	list mode 'tx'
	list mode 'rx'

